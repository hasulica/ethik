<p id="notice"><%= notice %></p>

<h1>Ventures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Description</th>
      <th>Country</th>
      <th>Price range</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ventures.each do |venture| %>
      <tr>
        <td><%= venture.name %></td>
        <td><%= venture.website %></td>
        <td><%= venture.description %></td>
        <td><%= venture.country %></td>
        <td><%= venture.price_range %></td>
        <td><%= link_to 'Show', venture %></td>
        <td><%= link_to 'Edit', edit_venture_path(venture) %></td>
        <td><%= link_to 'Destroy', venture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Venture', new_venture_path %>
